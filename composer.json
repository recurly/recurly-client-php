{
    "name": "recurly/recurly-client",
    "type": "library",
    "description": "The PHP client library for the Recurly API",
    "keywords": ["recurly", "payments", "pay"],
    "homepage": "https://github.com/recurly/recurly-client-php",
    "license": "MIT",
    "authors": [],
    "require": {
        "php": ">=5.6",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "squizlabs/php_codesniffer": "3.*",
        "phpcsstandards/phpcsutils": "@alpha",
        "phpcompatibility/php-compatibility": "dev-develop"
    },
    "autoload": {
        "classmap": ["lib"]
    },
    "config": {
      "allow-plugins": {
        "dealerdirect/phpcodesniffer-composer-installer": true
      }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.4.x-dev"
        }
    },
  "scripts": {
    "compatibility": "phpcs --extensions=php --severity=1 --standard=PHPCompatibility --runtime-set testVersion 8.1- lib Tests"
  }
}
