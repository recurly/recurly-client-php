# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# PHP PEAR Coding Standards
# https://pear.php.net/manual/en/standards.php

root = true

[*.php]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
